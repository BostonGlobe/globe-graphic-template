set-font('bentonsanscond-regular') /* Graphic byline and source */

.source-and-credit
  clear both
  width 100%
  overflow hidden
  margin-top 1em

  p
    line-height 1.6
    padding 0
    margin 0
    font-size 12px
    text-align left
    float none

  .source span
    font-weight normal
    +mq('bp-2')
      float left

  .credit span
    text-transform uppercase
    +mq('bp-2')
      text-align right
      float right

.graphic
  &__text
    margin .5rem 0

    &--hed
      font-weight bold
      +mq('bp-2')
        font-size 1.1rem

    &--subhed
      font-size .9rem
      +mq('bp-2')
        font-size 1rem
        margin-bottom 1rem
