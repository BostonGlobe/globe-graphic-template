//========================
// Breakpoints
//========================
$mq_vars = {
    bp-1: '(min-width: 25em)' // 400px
    bp-2: '(min-width: 40em)' // 640px
    bp-3: '(min-width: 50em)' // 800px
    bp-4: '(min-width: 60em)' // 960px
    bp-5: '(min-width: 80em)' // 1280px
}

//========================
// Type Scale
//========================
$root-size = 18px
$root-lh = 2

$type-scale = {
	x-small: 12px
	small: 16px
    base: $root-size
    medium: 24px
    large: 32px
    x-large: 48px
}

//========================
// Z-index
//========================
$z-index = {
	bottom: -100
	middle: 0
	top: 100
	overlay: 200
}

//========================
// Typefaces
//========================
$sans = Helvetica Neue, Helvetica, Arial, sans-serif
$serif = Georgia, Times, serif
$sans-cond = Impact, Arial Narrow, Helvetica, sans-serif
$benton = Benton, Helvetica Neue, Helvetica, Arial, sans-serif
$miller = Miller, Georgia, Times, serif
$miller-banner = Miller-Banner, Georgia, Times, serif

$regular = 400
$bold = 700
